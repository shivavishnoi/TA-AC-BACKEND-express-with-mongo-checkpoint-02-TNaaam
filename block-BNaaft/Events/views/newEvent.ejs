<%- include('partials/header.ejs') %>
<main>
  <form action="/events/new" method="POST">
    <div>
      <label for="title">Title: </label>
      <input type="text" name="title" placeholder="Title..." id="title">
    </div>
    <div>
      <label for="summary">Summary: </label>
      <textarea name="summary" id="summary" cols="30" rows="6" placeholder="Summary..."></textarea>
    </div>
    <div>
      <label for="host">Host: </label>
      <input type="text" name="host" placeholder="Host..." id="host">
    </div>
    <div>
      <label for="Start">Start Date: </label>
      <input type="date" name="start_date" id="start">
    </div>
    <div>
      <label for="end">End Date: </label>
      <input type="date" name="end_date" id="end">
    </div>
    <div>
      <label for="category">Category: </label>
      <input type="text" name="category" placeholder="Category..." id="category">
    </div>
    <div>
      <label for="location">Location: </label>
      <input type="text" name="location" placeholder="Location..." id="location">
    </div>
    <button type="submit">Submit</button>
  </form>
</main>
<%- include('partials/footer.ejs') %>